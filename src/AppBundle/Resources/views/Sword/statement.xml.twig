<atom:feed xmlns:sword="http://purl.org/net/sword/terms/"
           xmlns:atom="http://www.w3.org/2005/Atom"
           xmlns:pkp="http://pkp.sfu.ca/SWORD">
    <atom:category scheme="http://purl.org/net/sword/terms/state" term="{{ plnState }}" label="PLN State">
        {{ plnStateDesc }}
    </atom:category>
    <atom:category scheme="http://purl.org/net/sword/terms/state" term="{{ processingState }}" label="Processing State">
        {{ processingStateDesc }}
    </atom:category>
    <atom:entry>
        <atom:category scheme="http://purl.org/net/sword/terms/"
                       term="http://purl.org/net/sword/terms/originalDeposit" 
                       label="Original Deposit"/>
        <atom:content type="application/zip" 
                      size="{{ deposit.size }}" 
                      volume="{{ deposit.volume }}" 
                      issue="{{ deposit.issue }}" 
                      checksumType="{{ deposit.checksumType }}"
                      checksumValue="{{ deposit.checksumValue }}"
                      pubdate="{{ deposit.pubDate|date('c') }}">
            {{ deposit.url }}
        </atom:content>
    </atom:entry>
</atom:feed>
